<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:fitsSystemWindows="true"
    android:minHeight="?attr/actionBarSize">

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@drawable/ic_menu" />

    <LinearLayout
        android:id="@+id/ll_music"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_local_music"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的音乐"
            android:textColor="@drawable/music_tab_bar_text_color_selector"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_online_music"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="在线音乐"
            android:textColor="@drawable/music_tab_bar_text_color_selector"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_other"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="visible"
        android:orientation="horizontal">
        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/stl_layout"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center"
            app:tl_bar_color="@color/whiteBg"
            app:tl_indicator_color="@color/color_10"
            app:tl_indicator_corner_radius="8dp"
            app:tl_tab_padding="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:layout_gravity="end"
        android:gravity="center"
        android:contentDescription="@null"
        android:text=""
        android:textSize="14sp"
        android:textColor="@drawable/music_tab_bar_text_color_selector"
        android:drawableEnd="@drawable/ic_menu_search"
        android:drawablePadding="0dp"
        android:scaleType="centerInside"/>

</FrameLayout>